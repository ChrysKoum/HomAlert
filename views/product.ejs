<!-- Use the boilerplate layout for consistent structure it will retrieve the layout of the boilerplate file -->
<link rel="stylesheet" href="stylesheets/product.css" />

<section class="d-flex align-items-center">
  <div class="container text-center">
    <!-- Title Section -->
    <h2 class="text-primary fw-bold">Our Technologies</h2>
    <p class="text-muted">
      Cutting Edge Components with High Performance Software
    </p>

    <div class="row align-items-center mt-5">
      <!-- Left Side - Technology Diagram -->
      <div class="col-md-6"><%- include('partials/technology-diagram') %></div>

      <!-- Right Side - Product Description -->
      <div class="col-md-6"><%- include('partials/sensors-desc-hover') %></div>
    </div>

    <!-- Call to Action (CTA) Section -->
    <div class="mission-cta text-center mt-5">
      <h3 class="fw-bold">Join our mission for safety</h3>
      <p class="text-muted">
        Become a customer, partner, or follow our journey on social media
      </p>
      <div class="d-flex justify-content-center gap-3">
        <a href="#" class="btn btn-primary px-4">Sign Up</a>
        <a href="#" class="btn btn-outline-dark px-4">Learn More</a>
      </div>
    </div>
  </div>
</section>

<% layout('layouts/boilerplate') %>
