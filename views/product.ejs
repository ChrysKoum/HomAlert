<!-- ===========================================
     Product View
     ===========================================
     This file serves as the home page of the web dashboard.
     Key actions:
     1. Include the necessary layout and partials.
     2. Display real-time data and user interactions.
     3. Ensure the page is styled consistently with the overall design.
     ===========================================
-->
<!-- Use the boilerplate layout for consistent structure it will retrieve the layout of the boilerplate file -->
<link rel="stylesheet" href="stylesheets/product.css" />
<script src="/javascripts/sensor-description-handler.js"></script>

<!-- Hero Section -->
<section class="product-hero position-relative w-100 overflow-hidden mb-5">
  <div class="hero-bg-container">
    <img src="/assets/images/kitchen_showcase.png" alt="Smart Kitchen" class="hero-bg-img w-100">
    <div class="hero-overlay"></div>
  </div>

  <!-- Center Hub -->
  <div class="hub-marker" style="top: 18%; left: 50%;">
    <div class="hub-label">Center Hub</div>
    <div class="hub-signal-receiver"></div>
  </div>

  <!-- Sensors -->
  
  <!-- Fire Sensor -->
  <div class="sensor-marker" style="top: 43%; left: 62%;" data-target="hub">
    <div class="sensor-icon-circle">
      <img src="/assets/icons/product/fire.png" alt="Fire Sensor">
    </div>
    <div class="sensor-callout left-side">
      <div class="callout-line"></div>
      <div class="callout-dot"></div>
      <span class="callout-text">Fire Sensor</span>
    </div>
    <div class="comm-waves" style="--angle: -130deg;">
      <span></span><span></span><span></span>
    </div>
  </div>

  <!-- Gas Sensor -->
  <div class="sensor-marker" style="top: 43%; left: 72%;" data-target="hub">
    <div class="sensor-icon-circle">
      <img src="/assets/icons/product/gas.png" alt="Gas Sensor">
    </div>
    <div class="sensor-callout">
      <div class="callout-line"></div>
      <div class="callout-dot"></div>
      <span class="callout-text">Gas Sensor</span>
    </div>
    <div class="comm-waves" style="--angle: -140deg;">
      <span></span><span></span><span></span>
    </div>
  </div>

  <!-- Water Sensor -->
  <div class="sensor-marker" style="top: 58%; left: 38%;" data-target="hub">
    <div class="sensor-icon-circle">
      <img src="/assets/icons/product/humidity.png" alt="Water Sensor">
    </div>
    <div class="sensor-callout">
      <div class="callout-line"></div>
      <div class="callout-dot"></div>
      <span class="callout-text">Water Sensor</span>
    </div>
    <div class="comm-waves" style="--angle: -70deg;">
      <span></span><span></span><span></span>
    </div>
  </div>

  <!-- Vibration/Earthquake Sensor -->
  <div class="sensor-marker" style="top: 28%; left: 5%;" data-target="hub">
    <div class="sensor-icon-circle">
      <img src="/assets/icons/product/seismograph.png" alt="Vibration Sensor">
    </div>
    <div class="sensor-callout">
      <div class="callout-line"></div>
      <div class="callout-dot"></div>
      <span class="callout-text">Vibration Detector</span>
    </div>
    <div class="comm-waves" style="--angle: -5deg;">
      <span></span><span></span><span></span>
    </div>
  </div>

</section>

<!-- Technology Description Section (Simplified) -->
<!-- Technology Diagram & Description Section -->
<section class="technology-section py-5 mb-5">
 <div class="container text-center">
    <h2 class="text-primary fs-1 mt-3">Our Technologies</h2>
    <p class="fs-5 my-3">Cutting Edge Components with High Performance Software</p>
  </div>

  <div class="container">
    <div class="row align-items-center">

      <!-- Left Side: Sensor Diagram -->
      <div class="col-12 col-xl-6 d-flex justify-content-center">
        <div class="sensor-diagram position-relative mx-auto">
          <% sensors.forEach((sensor, index) => { %>
          <a
            href="#"
            class="sensor-icon"
            id="sensor-<%= index %>"
            data-index="<%= index %>">
            <img src="<%= sensor.image %>" alt="<%= sensor.title %>" />
          </a>
          <% }); %>

          <!-- Dashed Lines -->
          <div class="line line-centerhub-database"></div>
          <div class="line line-database-database1"></div>
          <div class="line line-database1-datareport"></div>
          <div class="line line-centerhub-motion"></div>
          <div class="line line-centerhub-gas"></div>
          <div class="line line-centerhub-fire"></div>
          <div class="line line-centerhub-humidity"></div>
          <div class="line line-centerhub-seismograph"></div>
        </div>
      </div>

      <!-- Right Side: Sensor Descriptions -->
      <div class="col-12 col-xl-6 text-center text-md-start">
        <div class="sensor-description">
          <!-- Default Center Hub description (Visible by default) -->
          <div class="desc default active" id="default-desc">
            <h4>Center Hub:</h4>
            <p class="text-muted">
              The central unit responsible for collecting and processing data
              from
              various sensors placed throughout the home. It acts as the main
              communication hub, ensuring all sensor data is accurately received
              and
              transmitted to other system components for further analysis and
              action.
            </p>
          </div>

          <!-- Other Sensor Descriptions (Initially Hidden) -->
          <% sensors.forEach((sensor, index) => { %>
          <% if (sensor.title !== "Center Hub") { %>
          <div class="desc" id="sensor-desc-<%= index %>">
            <h4><%= sensor.title %></h4>
            <p class="text-muted"><%= sensor.description %></p>
          </div>
          <% } %>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</section>

<!--Join us-->
<%- include('partials/join-us') %>

<% layout('layouts/boilerplate') %>
