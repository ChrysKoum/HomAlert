<!-- Use the boilerplate layout for consistent structure it will retrieve the layout of the boilerplate file -->
<% layout('layouts/boilerplate') %>

<!-- Here if you use vh-100 that is where you tell to take 100% of the height screen it will be more center vertically -->
<section class="hero-section d-flex align-items-center"> <!-- vh-100 -->
  <div class="container">
    <div class="row align-items-center justify-content-center">

      <!-- Text Content Section -->
      <div class="col-12 col-md-6 order-2 order-md-1 ">
        <h1 class="fw-bold text-center header-text">
          <% const [firstPart, secondPart] = hero.title.main.split(',') %>
          <%= firstPart %> <span class="text-primary"><%= secondPart.trim() %></span>
          <br><%= hero.title.subtitle %>
        </h1>
        <p class="lead mt-3 text-secondary fw-normal fs-5 text-center text-md-start paragraph-text">
          <%= hero.description %>
        </p>
        <a href="<%= hero.cta.url %>" class="btn btn-primary btn-lg mt-3 rounded-5 px-4 d-block d-md-inline-block mx-auto mx-md-0">
          <%= hero.cta.text %>
        </a>
      </div>

      <!-- Image Section -->
      <div class="col-12 col-md-6 order-1 order-md-2 ">
        <img src="<%= hero.image.src %>" alt="<%= hero.image.alt %>" class="img-fluid w-100">
      </div>

    </div>
  </div>
</section>

