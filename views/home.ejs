<section class="Why-Choose-Us-Section text-center py-5">
  <div class="container" id="responsive-container">
    <h3 class="mb-0 fs-3"><%= whyChooseUs.header.subtitle %></h3>

    <!-- Decorative SVG -->
    <svg width="212" height="12" viewBox="0 0 212 12" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0.226497 5.99963L5.99963 11.7735L11.7735 6.00037L6.00037 0.226497L0.226497 5.99963ZM211.773 6.01313L206 0.239255L200.227 6.01239L206 11.7863L211.773 6.01313ZM5.99994 7L206 7.01276L206 5.01276L6.00006 5L5.99994 7Z" fill="#2A61E2" />
    </svg>

    <h2 class="text-primary fs-1 mt-3"><%= whyChooseUs.header.title %></h2>
    <p class="fs-5 mt-3"><%= whyChooseUs.header.description %></p>

    <!-- Wave Image (visible only on medium and larger screens) -->
    <div class="position-relative mt-4">
      <img src="<%= whyChooseUs.waveImage.src %>" 
           alt="<%= whyChooseUs.waveImage.alt %>" 
           class="d-none d-md-block w-100">

      <!-- Features Row -->
      <div class="row justify-content-center d-none d-md-flex align-items-stretch position-absolute top-50 start-50 translate-middle w-100">
        <% whyChooseUs.features.forEach(feature => { %>
          <div class="col-md-3 text-center" style="transform: <%= feature.transform %>;">
            <div class="feature-item d-flex flex-column align-items-center justify-content-between">
              <% if (feature.order === 'content-first') { %>
                <div class="mt-3 py-2">
                  <h4 class="text-primary fs-5 mb-2"><%= feature.title %></h4>
                  <p class="fs-6 mb-0"><%= feature.description %></p>
                </div>
                <img src="<%= feature.icon %>" 
                     alt="<%= feature.alt %>" 
                     class="img-fluid shadow rounded-3 p-2" 
                     style="width: 80px; height: 80px; background: white;">
              <% } else { %>
                <img src="<%= feature.icon %>" 
                     alt="<%= feature.alt %>" 
                     class="img-fluid shadow rounded-3 p-2" 
                     style="width: 80px; height: 80px; background: white;">
                <div class="mt-3 py-2">
                  <h4 class="text-primary fs-5 mb-2"><%= feature.title %></h4>
                  <p class="fs-6 mb-0"><%= feature.description %></p>
                </div>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Features for Small Screens -->
      <div class="row row-cols-1 row-cols-md-2 g-4 d-md-none mt-3 mt-md-5">
        <% whyChooseUs.features.forEach(feature => { %>
          <div class="col text-center mb-4">
            <img src="<%= feature.icon %>" 
                 alt="<%= feature.alt %>"
                 style="width: 80px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); border-radius: 15px; background: white; padding: 10px;">
            <h4 style="color: #3A70EF; font-size: 20px; margin-top: 1rem;"><%= feature.title %></h4>
            <p style="font-size: 15px;"><%= feature.description %></p>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</section>

